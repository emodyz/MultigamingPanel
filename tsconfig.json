{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "module": "esnext",
        "strictNullChecks": false,
        "esModuleInterop": true,
        "lib": ["dom", "esNext"]
    },
    "types": [
        "lodash",
        "qs"
    ],
    "include": [
        "resources/js/**/*",
        "./*.js"
    ]
}
