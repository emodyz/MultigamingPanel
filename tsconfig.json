{
    "compilerOptions": {
        "target": "es5",
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "module": "es2015",
        "strictNullChecks": false,
        "esModuleInterop": true
    },
    "include": [
        "resources/js/**/*",
        "./*.js"
    ]
}
